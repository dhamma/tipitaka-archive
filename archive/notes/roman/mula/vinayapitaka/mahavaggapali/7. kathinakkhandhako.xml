  <note reference-line="138" id="7">
    <original>apavinayamāno (sī.), apacinayamāno (ka.)</original>
    <type>auto</type>
    <snippet> atthatakathino disaṃgamiko pakkamati cīvarapaṭivīsaṃ apavilāyamāno </snippet>
    <match>apavilāyamāno</match>
    <alternatives>
      <alternative source-abbr="sī." source="sri lanka">apavinayamāno</alternative>

    <gatha3 line="571">Vatthaṃ bhogo ca me hontu,</gatha3>
    <gathalast line="572">Parivārātisundarā.</gathalast>
    <hangnum line="573" number="106"></hangnum>
    <gatha1 line="574"> Dasāsuttaṃpi me bhogaṃ,</gatha1>
    <gatha2 line="575">Pañcaverā bhave bhave;</gatha2>
    <gatha3 line="576">Māgaṇheyyuñca nasseyyuṃ,</gatha3>
    <gathalast line="577">Asoko bhogahetume.</gathalast>
    <hangnum line="578" number="107"></hangnum>
    <gatha1 line="579"> Sabbaṅgasubha <pageBreak edition="Myanmar" number="0.0084" /> sampanno,</gatha1>
    <gatha2 line="580">Siṅgīnikkha savaṇṇa vā;</gatha2>
    <gatha3 line="581">Bāttiṃsa lakkhaṇūpeto,</gatha3>
    <gathalast line="582">Atappana rūpa vā bhave.</gathalast>
    <hangnum line="583" number="108"></hangnum>
    <gatha1 line="584"> Kāyo candanagandho ca,</gatha1>
    <gatha2 line="585">Mukhaṃ uppalagandhikaṃ;</gatha2>
    <gatha3 line="586">Aṭṭhaṅgiko <pageBreak edition="Myanmar" number="0.0085" /> karavika,</gatha3>
    <gathalast line="587">Mañjūghoso ca me hotu.</gathalast>
    <hangnum line="588" number="109"></hangnum>
    <gatha1 line="589"> Tikkha gambhīra pañño ca,</gatha1>
    <gatha2 line="590">Hāsātijavapaññavā,</gatha2>
    <gatha3 line="591">Bhūri nibbedha pañño ca;</gatha3>
    <gathalast line="592">Sabbapañhavisajjano.</gathalast>
    <hangnum line="593" number="111"></hangnum>
    <gatha1 line="594"> Anto <pageBreak edition="Myanmar" number="0.0086" /> soḷasavassassa,</gatha1>
    <gatha2 line="595">Tipeṭakadharo bhave;</gatha2>
    <gatha3 line="596">Sabbakammesu sippesu,</gatha3>
    <gathalast line="597">Vijjāṭhānesu pāragū.</gathalast>
